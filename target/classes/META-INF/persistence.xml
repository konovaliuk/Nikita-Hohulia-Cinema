<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="Cinema" transaction-type="RESOURCE_LOCAL">

        <class>com.hohulia.cinema.JPA.Entities.Booking</class>
        <class>com.hohulia.cinema.JPA.Entities.Movie</class>
        <class>com.hohulia.cinema.JPA.Entities.Role</class>
        <class>com.hohulia.cinema.JPA.Entities.Schedule</class>
        <class>com.hohulia.cinema.JPA.Entities.UserList</class>
        <class>com.hohulia.cinema.JPA.Entities.UserRole</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost/cinema?useUnicode=true"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="root"/>

            <property name="jakarta.persistence.jdbc.serverTimezone" value="UTC"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.connection.provider_class" value="org.hibernate.hikaricp.internal.HikariCPConnectionProvider" />
            <property name="hibernate.hikari.minimumIdle" value="5" />
            <property name="hibernate.hikari.maximumPoolSize" value="10" />
            <property name="hibernate.hikari.idleTimeout" value="30000" />
        </properties>
    </persistence-unit>
</persistence>